{
  "name": "tome",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "AI Native Database client",
"scripts": {
  "dev": "vite",
  "main:watch": "tsc -w",
  "start": "npm-run-all -p dev main:watch",
  "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
  "rebuild": "electron-rebuild -f -w better-sqlite3",
  "clean": "rimraf dist out",

  "build:renderer": "vite build",
  "build:main": "tsc -p tsconfig.json",

  "package:mac": "electron-packager . Tome --platform=darwin --arch=arm64 --out=out --icon=public/tome.icns --overwrite",
  "dmg:mac": "electron-installer-dmg out/Tome-darwin-arm64/Tome.app Tome --out=out --icon=public/tome.icns --background=public/dmg-bg.png --overwrite",
  "build:mac": "npm-run-all package:mac dmg:mac",

  "package:mac:arm64": "electron-packager . Tome --platform=darwin --arch=arm64 --out=out --icon=public/tome.icns --background=public/dmg-bg.png --overwrite",
  "dmg:mac:arm64":     "electron-installer-dmg out/Tome-darwin-arm64/Tome.app tome-mac-arm64 --title=Tome --out=out --icon=public/tome.icns --background=public/dmg-bg.png --overwrite ",
  "build:mac:arm64":   "npm-run-all package:mac:arm64 dmg:mac:arm64",

  "package:mac:x64": "electron-packager . Tome --platform=darwin --arch=x64 --out=out --icon=public/tome.icns --background=public/dmg-bg.png --overwrite",
  "dmg:mac:x64":     "electron-installer-dmg out/Tome-darwin-x64/Tome.app tome-mac-intel --title=Tome --out=out --icon=public/tome.icns --background=public/dmg-bg.png --overwrite",
  "build:mac:x64":   "npm-run-all package:mac:x64 dmg:mac:x64",

  "package:win": "electron-packager . Tome --platform=win32 --arch=x64 --out=out --icon=public/tome.ico --overwrite",
  "installer:win": "electron-installer-windows --src out/Tome-win32-x64/ --dest out --icon public/tome.ico --config build/win.json",
  "build:win": "npm-run-all package:win installer:win",

  "package:linux": "electron-packager . Tome --platform=linux --arch=x64 --out=out --icon=public/tome.icns --overwrite",
  "appimage:linux": "electron-installer-appimage out/Tome-linux-x64/ --out=out",
  "build:linux": "npm-run-all package:linux appimage:linux",
  "prebuild": "npm-run-all clean build:renderer build:main",
  "build": "npm-run-all prebuild build:mac:arm64 build:mac:x64 build:win build:linux",
  "preview": "vite preview"
},
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/react": "^1.2.12",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.8",
    "ai": "^4.3.16",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "electron-log": "^5.4.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.511.0",
    "mysql": "^2.18.1",
    "nanoid": "^5.1.5",
    "pg": "^8.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-window": "^1.8.11",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.47"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mysql": "^2.15.27",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.3",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-installer-appimage": "^1.0.1",
    "electron-installer-dmg": "^5.0.1",
    "electron-installer-windows": "^3.0.0",
    "electron-osx-sign": "^0.6.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "electron-windows-installer": "^1.7.8",
    "electron-winstaller": "^5.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "npm-run-all": "^4.1.5",
    "nsis": "^0.0.0",
    "postcss": "^8.5.4",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },

  "main": "dist-electron/main.js"
}
